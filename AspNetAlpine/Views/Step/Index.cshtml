<div class="row" x-data="stepCtrl()">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <p x-text="message"></p>
                <input class="form-control" type="text" x-model="data.master" />
            </div>
            <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="3" x-bind:style=" `width: ${stepId*100/3}%;` "></div>
            </div>
            <div class="card-body" id="id_content"></div>

            <div class="mt-5 card-footer">
                <button class="btn btn-secondary" x-on:click="OnBackButtonClicked">Back</button>
                <button class="btn btn-primary" x-on:click="OnNextButtonClicked">Next</button>
                @*
                    @Html.ActionLink("OnBack", "Back", "Step", new { stepId = ViewBag.StepId }, new { @class = "nav-link" })
                    @Html.ActionLink("OnNext", "Next", "Step", new { stepId = ViewBag.StepId }, new { @class = "nav-link" })
                *@
            </div>
        </div>
    </div>
</div>
